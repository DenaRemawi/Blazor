@using BlazorWeb.Data;
@model List<Contact>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


@section Body {

    <form method="post">
        <div class="d-flex justify-content-center">
            <div class="input-group w-auto">
                <input type="text"
                       class="form-control"
                       placeholder="First Name"
                       aria-describedby="button-addon1" /> 
                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary" type="submit" id="button-addon1" data-mdb-ripple-color="dark">
                    Search
                </button>

            </div>
        </div>



        <div class="row">
            <div class="col-xs-12 col-lg-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>  First Name</th>
                            <th>  Last Name</th>
                            <th>Phone Number</th>
                            <th> Email</th>
                            <th>Option</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Contact item in Model)
                        {
                            <tr>

                               
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                                <td>
                                    @item.PhoneNumber
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    <div>
                                        <a asp-action="Removes" asp-route-id=@item.ID>Delete  </a>
                                    </div> 
                                    <div>
                                        <a asp-action="EditContact" asp-route-id=@item.ID>Edit  </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </form>




}

